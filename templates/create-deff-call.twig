{% include 'header.twig' %}
<h2>Create Deff-Call</h2>
<form method="post">
    <fieldset>
        <legend>{{ translations.main }}</legend>
        <label>{{ translations.village_url }}<input name="url" type="url"/></label>
        <label>{{ translations.arrival }}<input name="time" type="datetime"/></label>
        <label>{{ translations.desired_troops }}<input name="troops" type="number" value="0" min="0"/></label>
        <label>{{ translations.desired_scouts }}<input name="scouts" type="number" value="0" min="0"/></label>
        <input type="submit"/>
    </fieldset>
</form>
{% include 'footer.twig' %}