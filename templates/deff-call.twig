{% include 'header.twig' %}
<h2>{{ translations.deff_call }} {{ id }}</h2>
<h3>{{ translations.status }}</h3>
<div class="split2">
{% set totalScouts=0 %}
{% set totalTroops=0 %}
<table>
    <tr><th>{{ translations.account }}</th><th>{{ translations.troops }}</th><th>{{ translations.arrival }}</th></tr>
    {% for support in supports %}
        {% if support.time > target.time %}
            {% if key==target.key and key is not empty %}
                <tr class="late"><th{% if support.name is not empty %} title="{{ support.name ~ '#' ~ support.discriminator }}"{% endif %}>{{ support.account }}</th><td>{{ support.scouts }}{{ translations.scouts }}<br/>{{ support.troops }}{{ translations.troops }}</td><td title="Added {{ support.added|date('y-m-d H:i:s') }}">{{ support.time|date('Y-m-d H:i:s') }}</td></tr>
            {% elseif session.user ~ '#' ~ session.discriminator == support.name ~ '#' ~ support.discriminator %}
                <tr class="late"><th{% if support.name is not empty %} title="{{ support.name ~ '#' ~ support.discriminator }}"{% endif %}>{{ support.account }}</th><td>{{ support.scouts }}{{ translations.scouts }}<br/>{{ support.troops }}{{ translations.troops }}</td><td title="Added {{ support.added|date('y-m-d H:i:s') }}">{{ support.time|date('Y-m-d H:i:s') }}</td></tr>
            {% endif %}
        {% else %}
            {% if key==target.key and key is not empty %}
                <tr><th{% if support.name is not empty %} title="{{ support.name ~ '#' ~ support.discriminator }}"{% endif %}>{{ support.account }}</th><td>{{ support.scouts }}{{ translations.scouts }}<br/>{{ support.troops }}{{ translations.troops }}</td><td title="{{ translations.created }} {{ support.added|date('y-m-d H:i:s') }}">{{ support.time|date('Y-m-d H:i:s') }}</td></tr>
            {% elseif session.user ~ '#' ~ session.discriminator == support.name ~ '#' ~ support.discriminator %}
                <tr><th{% if support.name is not empty %} title="{{ support.name ~ '#' ~ support.discriminator }}"{% endif %}>{{ support.account }}</th><td>{{ support.scouts }}{{ translations.scouts }}<br/>{{ support.troops }}{{ translations.troops }}</td><td title="Added {{ support.added|date('y-m-d H:i:s') }}">{{ support.time|date('Y-m-d H:i:s') }}</td></tr>
            {% endif %}
            {% set totalScouts=totalScouts+support.scouts %}
            {% set totalTroops=totalTroops+support.troops %}
        {% endif %}
    {% endfor %}
</table>
<table>
    <tr><th>{{ translations.world }}</th><td>{{ target.world }}</td></tr>
    <tr><th>{{ translations.village }}</th><td><a href="https://{{ target.world }}/position_details.php?x={{ target.x }}&y={{ target.y }}" target="_blank">({{ target.x }}|{{ target.y }})</a></td></tr>
    <tr><th>{{ translations.scouts }}</th><td>{{totalScouts }}/{{ target.scouts }}</td></tr>
    <tr><th>{{ translations.troops }}</th><td>{{totalTroops }}/{{ target.troops }}</td></tr>
    <tr><th>{{ translations.arrival }}</th><td>{{ target.time|date('Y-m-d H:i:s') }}</tr>
    <tr><th>{{ translations.share }}</th><td><a href="https://travian.idrinth.de/deff-call/{{ id }}">https://travian.idrinth.de/deff-call/{{ id }}</a></tr>
    {% if key==target.key and key is not empty %}
        <tr><th>{{ translations.share_full }}</th><td><a href="https://travian.idrinth.de/deff-call/{{ id }}/{{ key }}">https://travian.idrinth.de/deff-call/{{ id }}/{{ key }}</a></tr>
    {% endif %}
</table>
</div>
{% if added %}
    <p>{{ translations.added }}</p>
{% endif %}
{% if key!=target.key or key is not empty %}
    <p>{{ translation.hidden_details }}</p>
{% endif %}
{% if now < target.arrival %}
<form method="post">
    <fieldset>
        <legend>{{ translations.main }}</legend>
        <label>{{ translations.account }}<input name="account" type="string"/></label>
        <label>{{ translations.scouts }}<input name="scouts" type="number" min="0"/></label>
        <label>{{ translations.troops }}<input name="troops" type="number" min="0"/></label>
        <label>{{ translations.arrival }}<input name="time" type="datetime-local"/></label>
        <input type="submit"/>
    </fieldset>
</form>
{% endif %}
{% include 'footer.twig' %}