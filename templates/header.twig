<!DOCTYPE html>
<html lang="{{ lang }}">
    <head>
        <meta charset="UTF-8">
        <title>{{ translations.title }}</title>
        <style>
            html, body {
                width: 100%;
                height: 100%;
                background: #ddd;
                color: #333;
                margin: 0;
                padding:0;
            }
            textarea, input, select {
                background: #eee;
                display:block;
                width: 100%;
                box-sizing: border-box;
            }
            input[type=submit] {
                background: red;
                color: #fff;
            }
            label {
                display: block;
            }
            a, a:visited, a:hover, a:focus, a:active {
                color: red;
            }
            a.invisible {
                text-decoration: none;
            }
            .error {
                color: red;
                font-weight: bold;
            }
            body > * {
                width: 80%;
                max-width: 800px;
                margin: 0 auto;
                padding: 0;
                box-shadow: 1px 1px 3px rgba(0,0,0,0.1);
            }
            body > div > .page {
                margin: 0 5%;
                width: 90%;
                box-shadow: 1px 1px 3px rgba(0,0,0,0.1);
            }
            body > #header,
            body > footer {
                background: #333;
                color: #ddd;
                text-align: center;
            }
            #header {
                display: flex;
            }
            #header > * {
                flex: auto;
                background: #333;
                color: #eee;
                display: inline;
                vertical-align: middle;
            }
            body > iframe {
                max-width: 100%;
            }
            nav {
                display: block;
            }
            nav > ul {
                display: flex;
                margin: 0;
                padding: 0;
            }
            nav > ul > li {
                display: block;
                margin: 0;
                padding: 0;
                flex: auto;
                text-align: center;
            }
            .result {
                background: #d0d0d0;
                border-radius: 1em;
                box-shadow: 3px 3px 5px #000;
                margin: 5px;
            }
            .result.hidden > table {
                display: none;
            }
            h3 {
                text-align: center;
            }
            .result > h3 {
                cursor: pointer;
            }
            .late {
                background: red;
            }
            .split2 {
               display: flex; 
            }
            .split2 > table {
                flex: auto;
            }
        </style>
        <script>
            const zeropad = (string) => {
                string = '' + string;
                if (string.length < 1) {
                    return '00';
                }
                if (string.length < 2) {
                    return '0' + string;;
                }
                return string;
            };
            window.setInterval(() => {
                const date = new Date();
                document.getElementById('time').innerHTML = zeropad(date.getUTCHours()) + ':' + zeropad(date.getUTCMinutes()) + ':' + zeropad(date.getUTCSeconds());
            }, 500);
        </script>
    </head>
    <body>
        <div id="header">
            <a class="invisible" href="/">
                <img src="/logo.png" alt=""/>
            </a>
            <h1>Travian Tools for v4.6 (alpha)</h1>
            <select style="width: auto; display: inline;" onchange="document.cookie='lang=' + this.value;location.reload();">
                <option{% if lang=='en' %} selected{% endif %} value="en">English</option>
                <option{% if lang=='de' %} selected{% endif %} value="de">Deutsch</option>
                <option{% if lang=='tr' %} selected{% endif %} value="tr">Türkçe</option>
                <option{% if lang=='nl' %} selected{% endif %} value="nl">Nederlands</option>
                <option{% if lang=='fi' %} selected{% endif %} value="fi">Suomi</option>
                <option{% if lang=='fi' %} selected{% endif %} value="fr">Français</option>
                <option{% if lang=='jp' %} selected{% endif %} value="jp">日本語</option>
            </select>
            <div>
                <span id="time"></span>
                <br />
                {% if session.user is empty %}
                    <a href="/login">{{ translations.login }}</a>
                {% else %}
                    <a href="/profile">{{ session.user }}#{{ session.discriminator }}</a>
                {% endif %}
            </div>
        </div>
        <nav>
            <ul>
                <li>
                    <a href="/delivery">{{ translations.delivery }}</a>
                </li>
                <li>
                    <a href="/hero-check">{{ translations.hero_check }}</a>
                </li>
                <li>
                    <a href="/deff-call">{{ translations.deff_call }}</a>
                </li>
            </ul>
        </nav>
        <article>
            <div class="page">